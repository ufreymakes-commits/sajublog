// ========================================
// [공통 헬퍼 함수] 템플릿 변수 치환
// ========================================
function fillPlaceholders(text, data) {
  if (!text) return "";
  return text.replace(/{(\w+)}/g, (match, key) => data[key] || match);
}

// [공통 헬퍼 함수] 천간/지지를 오행 문자로 변환
function getElementType(hanja) {
  const map = {
    "갑": "목", "을": "목", "병": "화", "정": "화", "무": "토", "기": "토", "경": "금", "신": "금", "임": "수", "계": "수",
    "인": "목", "묘": "목", "사": "화", "오": "화", "진": "토", "술": "토", "축": "토", "미": "토", "신": "금", "유": "금", "해": "수", "자": "수"
  };
  return map[hanja] || "";
}

// ========================================
// 섹션 1 생성 메인 함수
// ========================================
function generateSection1(sajuData) {
  const {
    userName,
    dayPillar,
    fiveElements,
    pillars,
    sinsal
  } = sajuData;

  // 1단계: 첫 문장 생성 (비유)
  const opening = generateOpeningSentence(userName, dayPillar, fiveElements, sinsal);
  
  // 2단계: 이중성 설명
  const duality = generateDualityDescription(dayPillar);
  
  // 3단계: 일주 환경 설명 (개선됨)
  const environment = generateEnvironmentDescription(dayPillar, pillars, fiveElements);
  
  // 4단계: 명리학 해석
  const myeongri = generateMyeongriInterpretation(sajuData);
  
  // 5단계: 현실 조언 (개선됨)
  const advice = generatePracticalAdvice(sajuData);
  
  // 최종 결과 조합 (문장 간 간격 조정)
  return `${opening}\n\n${duality}\n\n${environment}\n\n${myeongri}\n\n${advice}`;
}

// ========================================
// 1단계: 첫 문장 (비유)
// ========================================
function generateOpeningSentence(userName, dayPillar, fiveElements, sinsal) {
  const metaphor = DAY_PILLAR_METAPHOR[dayPillar];
  const elementEnv = selectElementEnvironment(fiveElements);
  const tension = selectSinsalTension(sinsal);
  
  return `${userName}님을 한마디로 정의하자면 ${elementEnv} ${tension} ${metaphor.image}와도 같습니다.`;
}

function selectElementEnvironment(fiveElements) {
  const maxElement = Object.keys(fiveElements).reduce((a, b) => 
    fiveElements[a] > fiveElements[b] ? a : b
  );
  const maxCount = fiveElements[maxElement];
  
  let level = maxCount >= 4 ? "과다" : (maxCount >= 2 ? "적당" : "부족");
  const options = FIVE_ELEMENTS_ENVIRONMENT[`${maxElement}${level}`] || ["묘한 기운이 감도는"];
  
  return options[Math.floor(Math.random() * options.length)];
}

function selectSinsalTension(sinsal) {
  const priority = ["원진살", "귀문관살", "충", "형", "도화살"];
  for (const s of priority) {
    if (sinsal.includes(s)) return SINSAL_TENSION[s];
  }
  return ""; 
}

// ========================================
// 2단계: 이중성 설명
// ========================================
function generateDualityDescription(dayPillar) {
  const duality = DAY_PILLAR_DUALITY[dayPillar];
  return `겉으로는 ${duality.outside}, 내면에는 ${duality.inside} 반전 매력의 소유자시네요. 남들이 볼 때는 여리여리해 보여도, ${duality.strength} 하나는 타의 추종을 불허하는 '${duality.keyword}'의 끝판왕입니다.`;
}

// ========================================
// 3단계: 일주 환경 설명 (모든 오행 대응형 수정)
// ========================================
function generateEnvironmentDescription(dayPillar, pillars, fiveElements) {
  const env = DAY_PILLAR_ENVIRONMENT[dayPillar];
  
  // 가장 강한 오행 찾기
  const maxElement = Object.keys(fiveElements).reduce((a, b) => 
    fiveElements[a] > fiveElements[b] ? a : b
  );
  
  const elementMap = { "목": "나무줄기", "화": "불길", "토": "흙먼지", "금": "바위와 칼날", "수": "물바다" };
  
  // 주변 기운 텍스트 생성
  let envText = "";
  if (fiveElements[maxElement] >= 4) {
    envText = `주변에 '${maxElement}'의 기운이 매우 강해 거대한 ${elementMap[maxElement]}가 펼쳐져 있는 형국입니다`;
  } else {
    envText = `오행의 기운이 어느 한쪽으로 치우치지 않고 비교적 고르게 분포되어 조화를 이루고 있습니다`;
  }

  return `이런 해석이 나온 이유는 본인을 상징하는 일주가 '${dayPillar}'이기 때문입니다. ${env.climate} ${env.detail}인데, 사주 주변에는 ${envText}. ${env.characteristic}.`;
}

// ========================================
// 4단계: 명리학 해석
// ========================================
function generateMyeongriInterpretation(sajuData) {
  const { dayMaster, dayBranch, fiveElements, tonggeun, sinsal, missingSipsung } = sajuData;
  let result = "명리학적으로 보면 ";

  // 통근 해석
  if (tonggeun) {
    const key = `${getElementType(dayMaster)}_${getElementType(dayBranch)}`;
    const tonggeunDesc = ILGAN_TONGGEUN[key];
    if (tonggeunDesc) {
      result += fillPlaceholders(tonggeunDesc.description + ` ${tonggeunDesc.strength}, `, { 일간: dayMaster, 일지: dayBranch });
    }
  }

  // 오행 패턴 해석
  const elementPattern = detectElementPattern(fiveElements, missingSipsung);
  if (elementPattern) {
    const patternDesc = ELEMENT_PATTERN_SENTENCES[elementPattern];
    result += fillPlaceholders(`${patternDesc.description} ${patternDesc.challenge}, ${patternDesc.reward || patternDesc.strength} `, 
      { 일간: dayMaster, 일지: dayBranch, 개수: fiveElements[getElementType(dayMaster)] });
  }

  // 신살 해석
  for (const s of sinsal) {
    const sinsalDesc = SINSAL_MYEONGRI_INTERPRETATION[s];
    if (sinsalDesc) {
      result += fillPlaceholders(`${sinsalDesc.cause} ${sinsalDesc.effect}. ${sinsalDesc.detail} `, { 위치: "사주 전체", 원진명: s });
      break; 
    }
  }

  return result;
}

function detectElementPattern(fiveElements, missingSipsung) {
  if (fiveElements["수"] >= 4) return "수과다_2";
  if (fiveElements["목"] === 0) return "목부족_무관_1";
  if (fiveElements["토"] >= 3) return "토과다_1";
  if (fiveElements["화"] >= 3) return "화과다_1";
  if (fiveElements["금"] >= 3) return "금과다_1";
  return null;
}

// ========================================
// 5단계: 현실 조언 (데이터 키 매핑 최적화 수정)
// ========================================
function generatePracticalAdvice(sajuData) {
  const { fiveElements, dayMaster, sinsal, missingSipsung } = sajuData;
  
  // 가장 많은 오행 찾기
  const maxElement = Object.keys(fiveElements).reduce((a, b) => 
    fiveElements[a] > fiveElements[b] ? a : b
  );
  
  let adviceKey = null;

  // 1순위: 오행과다 + 일간 조합 (예: "수과다_기토")
  if (fiveElements[maxElement] >= 4) {
    adviceKey = `${maxElement}과다_${dayMaster}`;
  }
  
  // 2순위: 신살 기반 (키가 없을 경우)
  if (!PRACTICAL_ADVICE[adviceKey]) {
    if (sinsal.includes("원진살")) adviceKey = "원진살_토일간";
    else if (missingSipsung.includes("정관") || missingSipsung.includes("편관")) adviceKey = "무관_자유";
    else adviceKey = "비겁강_독립"; // 최종 Fallback
  }

  const advice = PRACTICAL_ADVICE[adviceKey] || PRACTICAL_ADVICE["비겁강_독립"];

  return fillPlaceholders(
    `현실적인 조언을 드리자면, ${advice.core}. ${advice.detail}. ${advice.positive}. ${advice.action}, ${advice.result}.`,
    { 일간: dayMaster }
  );
}

// ========================================

// 헬퍼 함수

// ========================================

function getElementType(hanja) {

  const map = {

    "갑": "목", "을": "목",

    "병": "화", "정": "화",

    "무": "토", "기": "토",

    "경": "금", "신": "금",

    "임": "수", "계": "수",

    "인": "목", "묘": "목",

    "사": "화", "오": "화",

    "진": "토", "술": "토", "축": "토", "미": "토",

    "신": "금", "유": "금",

    "해": "수", "자": "수"

  };

  return map[hanja] || "";

}


